<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mipt_bank_app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_replenishment2"
            app:destination="@id/replenishment2" />
        <action
            android:id="@+id/action_navigation_home_to_withdraw2"
            app:destination="@id/withdraw2" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.mipt_bank_app.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.mipt_bank_app.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_registration"
            app:destination="@id/registration" />
        <action
            android:id="@+id/action_navigation_notifications_to_account"
            app:destination="@id/account" />
    </fragment>
    <fragment
        android:id="@+id/registration"
        android:name="com.example.mipt_bank_app.Registration"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registration_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_registration_to_account"
            app:destination="@id/account" />
    </fragment>
    <fragment
        android:id="@+id/account"
        android:name="com.example.mipt_bank_app.Account"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_account_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>
    <fragment
        android:id="@+id/replenishment2"
        android:name="com.example.mipt_bank_app.Replenishment"
        android:label="fragment_replenishment"
        tools:layout="@layout/fragment_replenishment" />
    <fragment
        android:id="@+id/withdraw2"
        android:name="com.example.mipt_bank_app.Withdraw"
        android:label="fragment_withdraw"
        tools:layout="@layout/fragment_withdraw" />
</navigation>